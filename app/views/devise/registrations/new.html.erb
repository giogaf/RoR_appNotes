<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :email, "Correo" %>
    <%= f.text_field :email, class:'form-control',required: true, autofocus: true %>
     </div>
  <div class="form-group">
    <%= f.label :password, "Contraseña" %>
    <%= f.text_field :password, class:'form-control',required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  </div>  
  <div class="form-group">
    <%= f.label :password_confirmation, "Repetir Contraseña" %>
    <%= f.text_field :password_confirmation,class:'form-control', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
