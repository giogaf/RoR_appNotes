<h2>Ingresar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, 'Correo'%>    
    <%= f.text_field :email, class:'form-control', required: false, autofocus: true %>
  </div>
  <div class="form-group">  
    <%= f.label :password, 'ContraseÃ±a'%>      
    <%= f.text_field :password, class:'form-control',required: false %>
  </div>
  <div class="form-group">    
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.label :remember_me, 'Recordar'%>          
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ingresar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
